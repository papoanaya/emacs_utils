extension "groff"
doctemplate
"
.MT 0
$header
.TL 
$title
.AU \"\"
.ND
.SA 0
.S -2
.DS L
"
".DE
.S +2
$footer
"
end

nodoctemplate
".S -2
.DS L
"
"
.DE
.S +2
"
end

bold "\fB$text\fP"
italics "\fB$text\fP"
underline "\fH$text\fP"
fixed "\fC$text\fP"

anchor "$infilename : $linenum - $text"
reference "$text \(-> $infile:$linenum, page : $infilename:$linenum"

lineprefix ""

#lineprefix "\fC\(em\fP   "
#lineprefix "\fC\n(ln\fP   "

translations
##"_" "\_"
##"\n" " \\\\\n"
##" " "\\ "
##"\t" "\\ \\ \\ \\ \\ \\ \\ \\ "
"\t" "    "
"|" "|"
"---" "\(em"
"--" "\(mi"
end
